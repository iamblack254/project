
<%- include('partials/header') %>
<main>
        <section id="contact" class="contact"
    >
        <div style="margin-top: -5rem;" class="container">
  
          <div class="section-title">
            <h2>Contact</h2>
            <p>harmony gates is proud to have and serve you s our greatest customer</p>
          </div>
  
          <div class="row">
  
            <div class="col-lg-5 d-flex align-items-stretch">
              <div class="info">
                <div class="address">
                  <i class="bi bi-geo-alt"></i>
                  <h4>Location:</h4>
                  <p> Nairobi<address> Katani road, Syokimau, P.O. BOX 00100</address></p>
                </div>
  
                <div class="email">
                  <i class="bi bi-envelope"></i>
                  <h4>Email:</h4>
                  <p>harmonygates2024@gmail.com</p>
                </div>
  
                <div class="phone">
                  <i class="bi bi-phone"></i>
                  <h4>Call:</h4>
                  <p>0103400461</p>
                </div>
  
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" style="border:0; width: 100%; height: 290px;" allowfullscreen></iframe>
              </div>
  
            </div>
            <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
              <form id="contact-form" method="post" role="form" class="email-form">
                <div class="row">
                  <div class="form-group col-md-6">
                    <label for="name">Your Name</label>
                    <input type="text" name="name" class="form-control" id="name" required>
                  </div>
                  <div class="form-group col-md-6 mt-3 mt-md-0">
                    <label for="name">Your Email</label>
                    <input type="email" class="form-control" name="email" id="email" required>
                  </div>
                  <div class="form-group col-md-6 mt-3 mt-md-0">
                    <label for="tel">your phone number</label>
                    <input type="tel" class="form-control" name="tel" id="tel" required>
                  </div>
                </div>
                <div class="form-group mt-3">
                  <label for="name">Subject</label>
                  <input type="text" class="form-control" name="subject" id="subject" required>
                </div>
                <div class="form-group mt-3">
                  <label for="name">Message</label>
                  <textarea class="form-control" name="message" rows="10" required></textarea>
                </div>
                <div class="my-3">
              
                </div>
                <div class="text-center"><button type="submit">Send Message</button></div>
              </form>
            <script>
              document.getElementById('contact-form').addEventListener('submit', function (event) {
                  event.preventDefault(); // Prevent the form from submitting the default way
          
                  // Extract form data
                  const formData = new FormData(this);
          
                  // Send data to your backend
                  fetch('/contact/email', {
                      method: 'POST',
                      body: JSON.stringify({
                          name: formData.get('name'),
                          email: formData.get('email'),
                          number: formData.get('tel'),
                          subject: formData.get('subject'),
                          message: formData.get('message')
                      }),
                      headers: {
                          'Content-Type': 'application/json'
                      }
                  })
                  .then(response => response.json())
                  .then(data => {
                      console.log('Success:', data);
                      // After successfully sending data to your backend, submit the form to FormSubmit
                      this.action = "https://formsubmit.co/johnicarus2020@gmail.com";
                      this.submit();
                  })
                  .catch((error) => {
                      console.error('Error:', error);
                      document.querySelector('.error-message').textContent = 'An error occurred. Please try again.';
                  });
              });
          </script>
            </div>
          </div>
  
        </div>
      </section><!-- End Contact Section -->
