<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar">
            <h2>Admin Panel</h2>
            <ul>
                <li><a href="#" data-section="add-property">Add Property</a></li>
                <li><a href="#" data-section="update-property">Update Property</a></li>
                <li><a href="#" data-section="view-properties">View Properties</a></li>
            </ul>
        </aside>

        <main class="main-content">
            <!-- Add Property Section -->
            <section id="add-property" class="content-section">
                <h2>Add New Property</h2>
                <form id="add-property-form">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>

                    <label for="description">Description:</label>
                    <textarea id="description" name="description" required></textarea>

                    <label for="image">Image:</label>
                    <input type="text" id="image-url" name="image" readonly>
                    <button type="button" id="select-image">Select Image</button>

                    <label for="bedrooms">Bedrooms:</label>
                    <input type="number" id="bedrooms" name="bedrooms" required>

                    <label for="bathrooms">Bathrooms:</label>
                    <input type="number" id="bathrooms" name="bathrooms" required>

                    <label for="size">Size (sq ft):</label>
                    <input type="number" id="size" name="size" required>

                    <label for="price">Price:</label>
                    <input type="number" id="price" name="price" required>

                    <button type="submit">Add Property</button>
                </form>
            </section>

            <!-- Update Property Section -->
            <section id="update-property" class="content-section hidden">
                <h2>Update Property</h2>
                <form id="update-property-form">
                    <label for="property-id">Property ID:</label>
                    <input type="text" id="property-id" name="property-id" required>

                    <label for="update-title">Title:</label>
                    <input type="text" id="update-title" name="title">

                    <label for="update-description">Description:</label>
                    <textarea id="update-description" name="description"></textarea>

                    <label for="update-image">Image URL:</label>
                    <input type="text" id="update-image-url" name="image" readonly>
                    <button type="button" id="update-select-image">Select Image</button>

                    <label for="update-bedrooms">Bedrooms:</label>
                    <input type="number" id="update-bedrooms" name="bedrooms">

                    <label for="update-bathrooms">Bathrooms:</label>
                    <input type="number" id="update-bathrooms" name="bathrooms">

                    <label for="update-size">Size (sq ft):</label>
                    <input type="number" id="update-size" name="size">

                    <label for="update-price">Price:</label>
                    <input type="number" id="update-price" name="price">

                    <button type="submit">Update Property</button>
                </form>
            </section>

            <!-- View Properties Section -->
            <section id="view-properties" class="content-section hidden">
                <h2>Property List</h2>
                <div id="property-list">
                    <!-- Properties will be dynamically loaded here -->
                </div>
            </section>
        </main>
    </div>

    <script src="/public/js/admin.js"></script>
</body>
</html>
